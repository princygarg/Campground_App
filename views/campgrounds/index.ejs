<% include ../partials/header%>
<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class = "btn btn-primary btn-large" href = "/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    <div class = "card-group" style = "display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class = "col-md-3 col-sm-6">
            <div class = "card" style = "margin-bottom:50px;">
                <img class="card-image-top" style="width:100%; height:200px;" src = "<%= campground.image %>">
                <div class = "card-body">
                     <h4 class="card-title"><%= campground.name %></h4>
                </div>
                <p style="text-align:center;">
                    <a href = "/campgrounds/<%= campground._id %>" class = "btn btn-primary"> More Info</a>
                </p>
            </div>
        </div>

    <% }) %>
    </div>
</div>
<% include ../partials/footer %>